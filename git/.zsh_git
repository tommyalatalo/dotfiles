alias ga='git add'
alias gaa='git add -A'
alias ga.='git add .'
alias gau='git add -u'
alias gb='git branch'
alias gca='git commit --amend'
alias gcane='git commit --amend --no-edit'
alias gaacanepf='git add -A && git commit --amend --no-edit && git push -f'
alias gco='git checkout'
alias gcom='git checkout master'
alias gco--="git checkout --"
alias gl='git log'
alias gls='git log --graph --pretty=short --decorate --numstat --max-count=10'
alias glf='git log --graph --pretty=full --decorate --numstat --max-count=10'
alias gs='git status'
alias gclo='git clone --recurse-submodules'
alias gpush='git push'
alias gps='git push'
alias gpf='git push -f'
alias gfa='git fetch --all'
alias gpl='git pull --recurse-submodules=yes --rebase'
alias gpull='git pull --recurse-submodules=yes --rebase'
alias gsub='git submodule update --init --recursive'
alias gpsub='git pull && git submodule update --init --recursive'
alias gpo='git pull origin'
alias gpom='git pull origin master --recurse-submodules=yes'
alias gpod='git pull origin dev --recurse-submodules=yes'
alias gpomr='git pull origin master --rebase --recurse-submodules=yes'
alias grm='git rebase master'
alias grom='git fetch origin && git rebase âˆ’p origin/master'
alias grhh='git reset HEAD~ --hard'
alias grhs='git reset HEAD~ --soft'
alias grhm='git reset HEAD~ --mixed'
alias grh='git reset HEAD'
alias gm='git merge'
alias gmt='git mergetool'
alias gdt='git difftool'
alias gprune='git branch -vv | grep '"'"'origin/.*: gone]'"'"' | awk '"'"'{print $1}'"'"' | xargs git branch -d'
alias gforceprune='git branch -vv | grep '"'"'origin/.*: gone]'"'"' | awk '"'"'{print $1}'"'"' | xargs git branch -D'
alias gstash='git stash'
alias gstashcl='git stash clear'
alias gpop='git stash pop'

function gc() { git commit -m "$*" }
function gcob() { git checkout -b $1; git push -u origin $1; }
