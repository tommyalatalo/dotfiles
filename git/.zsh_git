alias ga='git add'
alias gaa='git add --all'
alias ga.='git add .'
alias gau='git add --update'
alias gb='git branch'
alias gba='git branch --all'
alias gbr='git branch --remotes'
alias gca='git commit --amend'
alias gcane='git commit --amend --no-edit'
alias gaacanepsf='git add --all && git commit --amend --no-edit && git push ---force'
alias gco='git checkout'
alias gcom='git checkout master'
alias gco--="git checkout --"
alias gl='git log'
alias gls='git log --graph --pretty=short --decorate --numstat --max-count=10'
alias glf='git log --graph --pretty=full --decorate --numstat --max-count=10'
alias gs='git status'
alias gclo='git clone --recurse-submodules'
alias gpush='git push'
alias gps='git push'
alias gpsf='git push --force'
alias gfa='git fetch --all'
alias gpl='git pull --rebase --recurse-submodules=yes'
alias gpull='git pull --rebase --recurse-submodules=yes'
alias gpsub='git pull --rebase && git submodule update --init --recursive'
alias gpo='git pull origin --rebase'
alias gpom='git pull origin master --rebase --recurse-submodules=yes'
alias gsub='git submodule update --init --recursive'
alias grom='git fetch origin && git rebase âˆ’p origin/master'
alias gr='git reset'
alias grb='git rebase'
alias grbi='git rebase --interactive'
alias grbm='git rebase master'
alias grh='git reset HEAD'
alias grhh='git reset HEAD~ --hard'
alias grhs='git reset HEAD~ --soft'
alias grhm='git reset HEAD~ --mixed'
alias gm='git merge'
alias gmt='git mergetool'
alias gdt='git difftool'
alias gprune='git branch -vv | grep '"'"'origin/.*: gone]'"'"' | awk '"'"'{print $1}'"'"' | xargs git branch -d'
alias gprunef='git branch -vv | grep '"'"'origin/.*: gone]'"'"' | awk '"'"'{print $1}'"'"' | xargs git branch -D'
alias gstash='git stash'
alias gstashcl='git stash clear'
alias gdrop='git stash drop'
alias gpop='git stash pop'
alias gt='git tag'
alias gtl='git tag --list'

function gc() { git commit -m "$*" }
function gcob() { git checkout -b $1; git push -u origin $1; }
