dxsh() { docker exec -it $1 sh }
dxbash() { docker exec -it $1 bash }
alias dx='docker exec'
alias dxit='docker exec -it'
alias dstop='docker stop'
alias drun='docker run'
alias drm='docker rm'
alias drmi='docker rm'
alias dcs='docker-compose stop'
alias dcrs='docker-compose restart'
alias dcrm='docker-compose rm'
alias dcu='docker-compose up -d'
alias dcup='docker-compose up -d'
alias dcub='docker-compose up --build -d'
alias dcd='docker-compose down'
alias dcdown='docker-compose down'
alias dcl='docker-compose logs -ft'
alias dl='docker logs -f'
alias stash='git stash'
alias sdrop='git stash && git stash drop'
alias spop='git stash pop'
alias sd='git stash && git stash drop'
alias dps='docker ps'
alias dpsa='docker ps -a'
alias dvp='docker volume prune'
alias dvls='docker volume ls'
alias dvrm='docker volume rm'
alias idb='docker exec -it influxdb /bin/bash'
alias dnuke='docker system prune -a && docker volume prune' #stop containers first

dlt() { docker logs --follow $1 --tail 250}
